{
  "testEnvironment": "node",
  "roots": ["<rootDir>/server", "<rootDir>/client"],
  "testMatch": [
    "**/__tests__/**/*.test.js",
    "**/?(*.)+(spec|test).js"
  ],
  "testPathIgnorePatterns": [
    "/node_modules/",
    "/server/__tests__/setup.js",
    "/client/node_modules/"
  ],
  "setupFilesAfterEnv": [
    "<rootDir>/server/__tests__/setupJest.js"
  ],
  "collectCoverageFrom": [
    "server/**/*.js",
    "client/src/**/*.js",
    "client/src/**/*.jsx",
    "!server/**/__tests__/**",
    "!client/**/__tests__/**",
    "!server/node_modules/**",
    "!client/node_modules/**"
  ],
  "coverageDirectory": "coverage",
  "coverageReporters": ["text", "lcov", "html"],
  "verbose": true,
  "forceExit": true,
  "detectOpenHandles": true,
  "globals": {
    "__DEV__": true
  },
  "injectGlobals": true,
  "transform": {}
}
